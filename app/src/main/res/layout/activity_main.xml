<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/quidditch_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The heart and the score bar-->
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#17FFFFFF"
            >

            <ImageView
                android:id="@+id/game_IMG_heart1"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:src="@drawable/ic_heart1" />

            <ImageView
                android:id="@+id/game_IMG_heart2"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_heart1" />

            <ImageView
                android:id="@+id/game_IMG_heart3"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/ic_heart1" />

            <TextView
                android:id="@+id/game_LBL_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Your score"
                android:textColor="#E34949"
                android:textSize="25sp"
                android:textStyle="bold" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- First line in the game   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#52101010"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/game_IMG_img1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp"
                    android:src="@drawable/ic_harry_potter" />
            </LinearLayout>
        </LinearLayout>

        <!-- Second line in the game   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52101010"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/game_IMG_img4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- third line in the game   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52101010"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/game_IMG_img7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Fourth line in the game   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52101010"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/game_IMG_img10"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img11"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img12"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Fifth line in the game   -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#52101010"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/game_IMG_img13"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp"
                    android:src="@drawable/ic_snitch" />

                <ImageView
                    android:id="@+id/game_IMG_img14"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />

                <ImageView
                    android:id="@+id/game_IMG_img15"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="#65A8EFAC"
                    android:padding="3dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- The buttons for moving-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/game_BTN_arrowUp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_arrow_up"
                    android:backgroundTint="#B1CA9B"
                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/game_BTN_arrowLeft"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="25dp"
                    android:background="@drawable/ic_arrow_left"
                    android:backgroundTint="#B1CA9B"/>

                <ImageButton
                    android:id="@+id/game_BTN_arrowRight"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/ic_arrow_right"
                    android:backgroundTint="#B1CA9B"/>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/game_BTN_arrowDown"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_arrow_down"
                    android:backgroundTint="#B1CA9B"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>